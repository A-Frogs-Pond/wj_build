"AppBuild"
{
	"AppID" "{{ appid }}" // your AppID
	"Desc" "Upload Windows" // internal description for this build
	"verbose" "0" // spew more build details in console
	"preview" "0" // make this a preview build only, nothing is uploaded

	"ContentRoot" "..\win\" // root content folder, relative to location of this file
	"BuildOutput" "..\output\" // build output folder for build logs and build cache files

	"Depots"
	{
		"{{ windows_depot_id }}" // WINDOWS Depot
		{
			"FileMapping"
			{
				"LocalPath" "*.exe" // all files from contentroot folder
				"DepotPath" "." // mapped into the root of the depot
				"recursive" "1" // include all subfolders
			}
			"FileMapping"
			{
				"LocalPath" "*.dll" // all files from contentroot folder
				"DepotPath" "." // mapped into the root of the depot
				"recursive" "1" // include all subfolders
			}
		}
	}
}